        <div class="z-[500] fixed top-0 w-full max-w-[500px]">
            <div id="navbar" class="navbar-show transition-transform -translate-y-full relative z-[510] flex items-center text-white my-3 mx-3">
                <span @onclick="@(async () => NavigateToPage(""))" class="inline-block cursor-pointer text-sm py-1 px-3 rounded-full text-black bg-stone-200 dark:bg-stone-800 dark:text-white">Jordy Schoolmeesters</span>
                <span class="grow"></span>
                <span @onclick="@(()=> DarkMode = !DarkMode)" class="text-xl h-[1.75rem] rounded-full text-black dark:text-white mr-3"><span class=" @(DarkMode ? "iconoir-half-moon" : "iconoir-sun-light")"</span></span>
                <span @onclick="@(async () => await OnMenuClick())" class="inline-block cursor-pointer text-sm py-1 px-3 rounded-full text-black bg-stone-200 dark:bg-stone-800 dark:text-white">@(ShowMenu ? "Close ×" : "Menu =")</span>
            </div>
